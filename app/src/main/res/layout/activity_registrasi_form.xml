<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrasiForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTemplate2"
        android:padding="50dp">

        <ImageView
            android:id="@+id/imageRegis"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/regis"/>

        <EditText
            android:id="@+id/nama_user"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:layout_below="@+id/imageRegis"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:hint="nama"
            android:textColorHint="#fff"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/occupation"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:layout_below="@+id/nama_user"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:hint="pekerjaan"
            android:textColorHint="#fff"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/pass"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:layout_below="@+id/occupation"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:hint="password"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/confirm_pass"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:layout_below="@+id/pass"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:hint="confirm password"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:inputType="textPassword
"/>

        <Button
            android:id="@+id/submit_regis"
            android:layout_below="@+id/confirm_pass"
            android:layout_marginTop="50dp"
            android:text="Submit"
            android:textStyle="bold"
            android:background="@drawable/custom_submit"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSubmitRegis"/>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>