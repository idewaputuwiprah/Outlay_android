<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTemplate2">

    <Button
        android:id="@+id/back_blank"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_btn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="50dp">

        <ImageView
            android:id="@+id/imageBlank"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/text_blank"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@id/imageBlank"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="This is text"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/submit_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_blank"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_submit"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Submit"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>