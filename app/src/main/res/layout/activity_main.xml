<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative_main_above"
        android:layout_width="match_parent"
        android:layout_height="330dp">
        
        <ImageView
            android:background="@color/colorTemplate"
            android:layout_width="match_parent"
            android:layout_height="230dp"/>

        <androidx.cardview.widget.CardView
            android:layout_centerInParent="true"
            android:layout_width="370dp"
            android:layout_height="200dp"
            app:cardCornerRadius="19dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Update"
                    android:textSize="9dp"
                    android:textColor="#D2D2D2"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="9dp"
                    android:textColor="#D2D2D2"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/dateText"
                    android:layout_marginRight="15dp" />

                <TextView
                    android:id="@+id/textYourBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Balance"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_above="@+id/thisIsCenter"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/thisIsCenter"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/thisIsCenter"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_main_above">

    </GridLayout>

</RelativeLayout>