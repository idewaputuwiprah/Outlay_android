<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTemplate2">

    <Button
        android:id="@+id/back_form"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_btn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">

        <ImageView
            android:id="@+id/imageForm"
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/nama"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:hint="nama"
            android:textColorHint="#fff"
            android:paddingLeft="20dp"
            android:layout_below="@+id/imageForm"
            android:layout_marginTop="10dp"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/jumlah_uang"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:layout_below="@+id/nama"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:hint="nominal"
            android:textColorHint="#fff"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/tanggal"
            android:padding="8dp"
            android:clickable="true"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:layout_below="@+id/jumlah_uang"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:hint="tanggal"
            android:textColorHint="#fff"
            android:textColor="#fff"/>

        <Spinner
            android:id="@+id/spinnerKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tanggal"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_edit_text"/>

        <Button
            android:id="@+id/submit_form"
            android:layout_below="@+id/spinnerKategori"
            android:layout_marginTop="30dp"
            android:text="Submit"
            android:textStyle="bold"
            android:background="@drawable/custom_submit"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</RelativeLayout>